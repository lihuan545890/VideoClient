<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgd"
    android:orientation="vertical" >
    
   <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/tab_widget_background"
        android:orientation="horizontal">
        
    <TextView 
        android:id="@+id/title_devinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="设备信息"
        android:layout_centerInParent="true"
        />                         
    </RelativeLayout>
       
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical">   
		    
		<View 
		    android:layout_width="fill_parent"
		    android:layout_weight="0.5"
		    android:layout_height="0dp"
		    />   
       
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1"
		    android:orientation="horizontal">
		    
			<View 
			    android:layout_width="0dp"
			    android:layout_weight="0.2"
			    android:layout_height="fill_parent"
			    />		   
		    
		    <TextView
		        android:id="@+id/devname"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"  
		        android:textColor="#ffffff" 
		        android:layout_weight="0.6"  
		        android:text="设备名称"/>
	    
		    <EditText
		        android:id="@+id/devnameEditText"
		        android:layout_width="0dp"
		        android:layout_weight="1.5" 
		        android:layout_height="wrap_content"
		        android:paddingLeft="10px"
		        android:background="@drawable/rounded_edittext"
		        
		       />  	
		               
			<View 
			    android:layout_width="0dp"
			    android:layout_weight="0.2"
			    android:layout_height="fill_parent"
			    />		     
		    
		</LinearLayout>	 
   
		<View 
		    android:layout_width="fill_parent"
		    android:layout_weight="0.1"
		    android:layout_height="0dp"
		    />   		
		
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1"
		    android:orientation="horizontal">
		    
			<View 
			    android:layout_width="0dp"
			    android:layout_weight="0.2"
			    android:layout_height="fill_parent"
			    />		 
		    
		    <TextView
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"  
		        android:textColor="#ffffff" 
		        android:layout_weight="0.6"  
		        android:text="设备地址"/>
	    
		    <EditText
		        android:id="@+id/devIpEditText"
		        android:layout_width="0dp"
		        android:layout_weight="1.5" 
		        android:layout_height="wrap_content"
		        android:paddingLeft="10px"
		        android:digits="1234567890." 
		        android:background="@drawable/rounded_edittext"
		        
		       />  	
		               
			<View 
			    android:layout_width="0dp"
			    android:layout_weight="0.2"
			    android:layout_height="fill_parent"
			    />		     
		    
		</LinearLayout>	 
	
		<View 
		    android:layout_width="fill_parent"
		    android:layout_weight="0.1"
		    android:layout_height="0dp"
		    />   		
			
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1"
		    android:orientation="horizontal">
		    
			<View 
			    android:layout_width="0dp"
			    android:layout_weight="0.2"
			    android:layout_height="fill_parent"
			    />		 
		    
		    <TextView
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"  
		        android:textColor="#ffffff" 
		        android:layout_weight="0.6"  
		        android:digits="1234567890" 
		        android:singleLine="true" 		        
		        android:text="端      口"/>
	    
		    <EditText
		        android:id="@+id/devPortEditText"
		        android:layout_width="0dp"
		        android:layout_weight="1.5" 
		        android:layout_height="wrap_content"
		        android:paddingLeft="10px"
		        android:digits="1234567890."
		        android:background="@drawable/rounded_edittext"
		        
		       />  	
		               
			<View 
			    android:layout_width="0dp"
			    android:layout_weight="0.2"
			    android:layout_height="fill_parent"
			    />		     
		    
		</LinearLayout>	 

		<View 
		    android:layout_width="fill_parent"
		    android:layout_weight="0.1"
		    android:layout_height="0dp"
		    />   		
				
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1"
		    android:orientation="horizontal">
		    
			<View 
			    android:layout_width="0dp"
			    android:layout_weight="0.2"
			    android:layout_height="fill_parent"
			    />		 
		    
		    <TextView
		        android:id="@+id/user"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"  
		        android:textColor="#ffffff" 
		        android:layout_weight="0.6"  
		        android:text="用   户  名"/>
	    
		    <EditText
		        android:id="@+id/devUserEditText"
		        android:layout_width="0dp"
		        android:layout_weight="1.5" 
		        android:layout_height="wrap_content"
		        android:paddingLeft="10px"
		        android:background="@drawable/rounded_edittext"
		        
		       />  	
		               
			<View 
			    android:layout_width="0dp"
			    android:layout_weight="0.2"
			    android:layout_height="fill_parent"
			    />		     
		    
		</LinearLayout>	 		
	
		<View 
		    android:layout_width="fill_parent"
		    android:layout_weight="0.1"
		    android:layout_height="0dp"
		    />   		
						
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1"
		    android:orientation="horizontal">
		    
			<View 
			    android:layout_width="0dp"
			    android:layout_weight="0.2"
			    android:layout_height="fill_parent"
			    />		 
		    
		    <TextView
		        android:id="@+id/passwd"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"  
		        android:textColor="#ffffff" 
		        android:layout_weight="0.6"  
		        android:text="密    码"/>
	    
		    <EditText
		        android:id="@+id/devPasswdEditText"
		        android:layout_width="0dp"
		        android:layout_weight="1.5" 
		        android:layout_height="wrap_content"
		        android:paddingLeft="10px"
		        android:inputType="textPassword"
		        android:background="@drawable/rounded_edittext"      
		       />  	
		               
			<View 
			    android:layout_width="0dp"
			    android:layout_weight="0.2"
			    android:layout_height="fill_parent"
			    />		     
		    
		</LinearLayout>	 		
		
		<View 
		    android:layout_width="fill_parent"
		    android:layout_weight="0.1"
		    android:layout_height="0dp"
		    />     		
		
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1"
		    android:orientation="horizontal">
		    
			<View 
			    android:layout_width="0dp"
			    android:layout_weight="0.2"
			    android:layout_height="fill_parent"
			    />		 
		    
		    <TextView
		        android:id="@+id/chanNo"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"  
		        android:textColor="#ffffff" 
		        android:layout_weight="0.6"  
		        android:text="通   道   数"/>
	    
             <EditText
                android:id="@+id/channelNo"
                android:paddingLeft="10px"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:digits="1234567890"
                android:maxLength="2"
                android:layout_weight="1.5"
                android:background="@drawable/rounded_edittext"/>		    
		    
			<View 
			    android:layout_width="0dp"
			    android:layout_weight="0.2"
			    android:layout_height="fill_parent"
			    />		     
		    
		</LinearLayout>	 			
    
		<View 
		    android:layout_width="fill_parent"
		    android:layout_weight="0.1"
		    android:layout_height="0dp"
		    />    		
		
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1"
		    android:orientation="horizontal">
		    
			<View 
			    android:layout_width="0dp"
			    android:layout_weight="0.15"
			    android:layout_height="fill_parent"
			    />	
		    		    
		    <TextView
		        android:id="@+id/devtype"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"  
		        android:textColor="#ffffff" 
		        android:layout_weight="0.4"  
		        android:layout_gravity="center_vertical"
		        android:text="设备类型"/>   
				
			<RadioGroup 
			    android:id="@+id/devtypeRadioGroup"
			    android:orientation="horizontal"
		        android:layout_width="0dp"
		        android:layout_weight="1.5" 
		        android:layout_height="wrap_content"
			    
			    >  
			    
			    <RadioButton 
			        android:id="@+id/nvr"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_vertical"
			        android:layout_weight="1" 
			        android:textColor="@color/white"  
			        android:text="NVR"
			        />
			    
			    <View 
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.1"/>
			    
			    <RadioButton 
			        android:id="@+id/dvr"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_vertical"
			        android:layout_weight="1"
			        android:textColor="@color/white"
			        android:text="DVR"
			        />		
			        
			    <View 
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.1"/>			    
			        
			    <RadioButton 
			        android:id="@+id/ipc"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_vertical"
			        android:layout_weight="1"
			        android:textColor="@color/white"
			        android:text="IPC"
			        />			    	    
			    
			</RadioGroup>				
		    
		</LinearLayout>				

		<View 
		    android:layout_width="fill_parent"
		    android:layout_weight="0.1"
		    android:layout_height="0dp"
		    />    		
				
		<LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:orientation="horizontal" 
	        android:layout_weight="1">
	      
			<View 
			    android:layout_width="0dp"
			    android:layout_weight="0.5"
			    android:layout_height="fill_parent"
			    />		    
		    
		    <Button 
		        android:id="@+id/savebtn"
		        android:layout_height="wrap_content"
		        android:layout_width="0dp"
		        android:text="@string/save"
		        android:background="@drawable/myselection"
		        android:textColor="#ffffff"
		        android:layout_weight="1"      
		        />
		    
			<View 
			    android:layout_width="0dp"
			    android:layout_weight="0.5"
			    android:layout_height="fill_parent"
			    />		 	    
	
		    
		    <Button 
		        android:id="@+id/cancelbtn"
		        android:layout_height="wrap_content"
		        android:layout_width="0dp"
	    		android:layout_weight="1"
	    		android:background="@drawable/myselection"
	    		android:textColor="#ffffff"
		        android:text="@string/cancel"             
		        />	    	       
		        
			<View 
			    android:layout_width="0dp"
			    android:layout_weight="0.5"
			    android:layout_height="fill_parent"
			    />	   
	       
	    </LinearLayout>
    
		<View 
		    android:layout_width="fill_parent"
		    android:layout_weight="3"
		    android:layout_height="0dp"
		    /> 		
		
		
   </LinearLayout>  
    

    
</LinearLayout>
