<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"  
    android:orientation="vertical" >
    
		<RelativeLayout
		    android:id="@+id/titleLayout"
			android:layout_width="match_parent"
			android:layout_height="60dp"
			android:background="@drawable/tab_widget_background"
			android:orientation="horizontal">    
    
			<Button 
				android:id="@+id/menu_preview"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"  
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true" 
				android:background="@drawable/menu_selection"
				/>             
				
			<TextView 
				android:id="@+id/title_preview"
				android:layout_width="wrap_content"       
				android:layout_height="wrap_content"
				android:layout_centerInParent="true" 
				android:textColor="#FFFFFF"
				android:text="实时预览"
				/>    
				 
        </RelativeLayout>
        
		<LinearLayout 
		    android:id="@+id/LinearDelLayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		    
		</LinearLayout>
       
		<LinearLayout 
		    android:id="@+id/LinearFourview"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
		
			<LinearLayout
			    android:id="@+id/linear1"
			    android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:layout_weight="1.0"
			    android:orientation="horizontal">
			    
			    <FrameLayout 
			        android:id="@+id/famelayout0"
			        android:layout_width="0dp"
			        android:layout_height="match_parent"
			        android:layout_weight="1.0">
			        
					<com.Activity.Preview4LowVersion
					    android:id="@+id/surfaceView0"
					    android:layout_width="match_parent"
					    android:layout_height="match_parent"
					    android:visibility="visible"/>			        
			        
			        <com.BLL.DrawImageView
					    android:id="@+id/mDrawIV0"
					    android:layout_width="match_parent"
					    android:layout_height="match_parent"/>	
					    
			        <View 
			            android:id="@+id/mView0"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:background="@drawable/add"/>	            
			        
			    </FrameLayout>
			    
			    <FrameLayout 
			        android:id="@+id/famelayout1"
			        android:layout_width="0dp"
			        android:layout_height="match_parent"
			        android:layout_weight="1.0">

					<com.Activity.Preview4LowVersion
					    android:id="@+id/surfaceView1"
					    android:layout_width="match_parent"
					    android:layout_height="match_parent"/>			        
			        			        
			        <com.BLL.DrawImageView
					    android:id="@+id/mDrawIV1"
					    android:layout_width="match_parent"
					    android:layout_height="match_parent"/>	
					    
			        <View 
			            android:id="@+id/mView1"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:background="@drawable/add"/>				        	            
			        
			    </FrameLayout>		    
			    
			    
			</LinearLayout>
			
			<LinearLayout
			    android:id="@+id/linear2"
			    android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:layout_weight="1.0"
			    android:orientation="horizontal">
			    
			    <FrameLayout 
			        android:id="@+id/famelayout2"
			        android:layout_width="0dp"
			        android:layout_height="match_parent"
			        android:layout_weight="1.0">
			        
					<com.Activity.Preview4LowVersion
					    android:id="@+id/surfaceView2"
					    android:layout_width="match_parent"
					    android:layout_height="match_parent"/>			        
			        
			        <com.BLL.DrawImageView
					    android:id="@+id/mDrawIV2"
					    android:layout_width="match_parent"
					    android:layout_height="match_parent"/>		    
					            
			        <View 
			            android:id="@+id/mView2"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:background="@drawable/add"/>	
			        
			    </FrameLayout>
			    
			    <FrameLayout 
			        android:id="@+id/famelayout3"
			        android:layout_width="0dp"
			        android:layout_height="match_parent"
			        android:layout_weight="1.0">
			        
					<com.Activity.Preview4LowVersion
					    android:id="@+id/surfaceView3"
					    android:layout_width="match_parent"
					    android:layout_height="match_parent"/>			        
			        
			        <com.BLL.DrawImageView
					    android:id="@+id/mDrawIV3"
					    android:layout_width="match_parent"
					    android:layout_height="match_parent"/>	
					    
			        <View 
			            android:id="@+id/mView3"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:background="@drawable/add"/>				        	            
			        
			    </FrameLayout>		    
			</LinearLayout>	
			
   	   </LinearLayout>
   	   
		
		<View 
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="3"/>
		
		<LinearLayout 
		    android:id="@+id/linearPannelLayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:background="@drawable/bg2">		   
		    		
			
		    <Button 
		        android:id="@+id/ptz"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:layout_gravity="center_vertical"
		        android:onClick="onPtzClick"
		        android:clickable="true"
		        android:background="@drawable/ptz_selection"	
		        />	
				    
		
		    <Button 
		        android:id="@+id/lens"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"				
		        android:layout_gravity="center_vertical"
		        android:onClick="onLensClick"
		        android:clickable="true"
		        android:background="@drawable/lens_selection"	
		        />
						    
		    <Button 
		        android:id="@+id/color"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:layout_gravity="center_vertical"
		        android:onClick="onColorClick"
		        android:clickable="true"	
		        android:background="@drawable/color_selection"	
		        />			        
			 
		    <Button 
		        android:id="@+id/capturepicture"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"  
		        android:layout_weight="1"
		        android:layout_gravity="center_vertical" 
		        android:onClick="onCapturePicClick"
		        android:clickable="true"	
		        android:background="@drawable/snapshot_selection"	
		        />
				    
		    <Button 
		        android:id="@+id/resolution"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:layout_gravity="center_vertical"
		        android:onClick="onResolutionClick"
		        android:clickable="true"	
		        android:background="@drawable/videoparam_selection"	 
		        />
		    	    
		    <Button 
		        android:id="@+id/talk"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:layout_gravity="center_vertical"
		        android:background="@drawable/talk_selection"
		        />
					    		    		    		    		    		    		    		    
		</LinearLayout>		

</LinearLayout>
