<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgd"   
    android:orientation="vertical" >
    
	<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/tab_widget_background"
        android:orientation="horizontal">
        
        <Button 
	        android:id="@+id/menu_playback"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"     
	        android:layout_centerVertical="true"  
	        android:layout_alignParentLeft="true"
	        android:background="@drawable/menu_selection"
	        />    
 
	    <TextView 
			android:id="@+id/title_playback"
	        android:text="@string/playback"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFF"
	        android:layout_centerInParent="true"/>  
	        
	     <Button 
	        android:id="@+id/chooseDev_playback"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"     
	        android:layout_centerVertical="true"  
	        android:layout_alignParentRight="true"
	        android:background="@drawable/menu_devicechoose"
	        />  				
        
    </RelativeLayout>  

        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"  
	        android:layout_weight="8.8"
	        android:orientation="vertical">
        
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="0.8"
	        android:orientation="horizontal">
         
             <View
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="0.05" />
            
			<RelativeLayout  
			    android:id="@+id/layout_calendar"  
			    android:layout_width="match_parent"  
			    android:layout_height="wrap_content"  
			    android:visibility="visible" >  
			  
			    <TextView  
			        android:id="@+id/calendarCenter"  
			        style="@style/main_bar_text_style"  
			        android:layout_width="wrap_content"  
			        android:layout_height="wrap_content"  
			        android:layout_centerHorizontal="true"  
			        android:layout_margin="8dp" />  
			  
			    <ImageButton  
			        android:id="@+id/calendarLeft"  
			        android:layout_width="wrap_content"  
			        android:layout_height="wrap_content"  
			        android:layout_alignParentLeft="true"  
			        android:padding="8dp"  
			        android:contentDescription="@null"  
			        android:src="@drawable/calendar_month_left"   
			        android:background="@null"/>  
			  
			    <ImageButton  
			        android:id="@+id/calendarRight"  
			        android:layout_width="wrap_content"  
			        android:layout_height="wrap_content"  
			        android:layout_alignParentRight="true"  
			        android:padding="8dp"  
			        android:contentDescription="@null"  
			        android:src="@drawable/calendar_month_right"   
			        android:background="@null"/>  
			  
			    <com.BLL.Calendarview  
			        android:id="@+id/calendar"  
			        android:layout_width="match_parent"  
			        android:layout_height="wrap_content"  
			        android:layout_alignParentLeft="true"  
			        android:layout_below="@+id/calendarCenter" />  
			</RelativeLayout>  
             
             <View
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="0.1" />
            
         </LinearLayout>
    
    </LinearLayout>
    
        <View 
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="0.5"/>         
        
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="vertical">"
        
	        <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="0.8"
		        android:orientation="horizontal">
	         
	             <View
	                 android:layout_width="0dp"
	                 android:layout_height="match_parent"
	                 android:layout_weight="0.05" />
	            
	             <Spinner
	                android:id="@+id/checkenc"
	                android:paddingLeft="20dp"
	                android:textStyle="bold"
	                android:textAlignment="center"
	                android:textColor="#FFFFFF"
	                android:singleLine="true"
	                android:background="@drawable/selector_spinner"
	                android:layout_height="match_parent"
	                android:layoutMode="opticalBounds"
	                android:ellipsize="marquee"
	                android:overScrollMode="always" 
	                android:layout_width="0dp"
	                android:layout_weight="1.5"/>
	
	              <View
	                  android:layout_width="0dp"
	                  android:layout_height="match_parent"
	                  android:layout_weight="0.05" />
	         </LinearLayout>
      </LinearLayout>
      
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">
         
        <View 
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="0.5"/> 
        
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal">
         
	           <View
	               android:layout_width="0dp"
	               android:layout_height="match_parent"
	               android:layout_weight="0.05" />
 
               <Button
                   android:id="@+id/btnquery"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1.5"
                   android:background="@drawable/myselection"
                   android:textColor="#ffffff"
                   android:text="@string/query" />

              <View
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="0.05" />
         </LinearLayout>
    </LinearLayout>        
    
       <TextView
           android:id="@+id/timeView"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:gravity="center"
           android:textColor="#ffffff"
           android:layout_weight="1" />        
           
       
       <LinearLayout 
	      android:layout_width="match_parent"
	      android:layout_height="0dp"
	      android:layout_weight="2"
	      android:gravity="center"
          android:orientation="horizontal">
           
		      	 <LinearLayout 
			       android:layout_width="0dp"
			       android:layout_height="match_parent"
			       android:layout_weight="1"
			       android:gravity="center"
		           android:orientation="vertical">           
	           
			             <View
			                 android:layout_width="match_parent"
			                 android:layout_height="0dp"
			                 android:layout_weight="0.8" />		      	     
		      	     
					     <Button 
					         android:id="@+id/zoomIn"
					         android:layout_width="match_parent"
					         android:layout_height="0dp"
					         android:layout_weight="2"
					         android:background="@drawable/selector_times"
					         android:textSize="20sp"
					         android:gravity="center"
					         android:text="-"
					         />   
				         
			             <View
			                 android:layout_width="match_parent"
			                 android:layout_height="0dp"
			                 android:layout_weight="1" />						     
					     
				 </LinearLayout>    
		              
				 <RelativeLayout 
				     android:layout_width="0dp"
				     android:layout_height="match_parent"
				     android:layout_weight="8"
				     android:orientation="vertical">   
			       
			         <com.BLL.TimeRuler
							android:id="@+id/timeRuler"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_centerHorizontal="true"
							android:layout_centerVertical="true" 
							android:clickable="true"
							/>    
							  
					<com.BLL.MyCursor
							android:id="@+id/myCursor"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_centerHorizontal="true"
							android:layout_centerVertical="true" 
							android:clickable="true"
							/>   	              
			     </RelativeLayout>    
					     
		      	 <LinearLayout 
			       android:layout_width="0dp"
			       android:layout_height="match_parent"
			       android:layout_weight="1"
			       android:gravity="center"
		           android:orientation="vertical">           
	           
 			             <View
			                 android:layout_width="match_parent"
			                 android:layout_height="0dp"
			                 android:layout_weight="0.8" />	  	     
		      	     
					     <Button    
					         android:id="@+id/zoomOut"
					         android:layout_width="match_parent"
					         android:layout_height="0dp"
					         android:layout_weight="2"
					         android:background="@drawable/selector_times"
					         android:textSize="20sp"
					         android:gravity="center"
					         android:text="+"
					         />   
				         
			             <View
			                 android:layout_width="match_parent"
			                 android:layout_height="0dp"
			                 android:layout_weight="1" />						     
					     
				 </LinearLayout>    		 
           
       </LinearLayout>
       
       
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
         
        <View 
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="0.2"/> 
        
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1.5"
	        android:orientation="horizontal">
         
             <View
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="0.05" />
 
               <Button
                   android:id="@+id/btnplay"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1.5"
                   android:background="@drawable/myselection"
                   android:textColor="#ffffff"
                   android:text="播放" />

              <View
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="0.05" />
         </LinearLayout>
    </LinearLayout>      
       
    <LinearLayout
         android:id="@+id/queryblank"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1.5"
         android:orientation="vertical" >
         <View 
          android:layout_height="0dp"   
          android:layout_width="match_parent"
           />
          
       </LinearLayout>
    
    </LinearLayout>
 
